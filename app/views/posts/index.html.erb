<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Body</th>
      <th>Username</th>
      <th>Link</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.uid %></td>
        <td><%= simple_format post.body.gsub("\t", "--") %></td>
        <td><%= post.username %></td>
        <td><%= post.link %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
